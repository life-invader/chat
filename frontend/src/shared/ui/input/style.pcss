.input {
  background-color: var(--colorShark2);
  padding: 8px 12px;
  display: flex;
  gap: 8px;

  &__field {
    width: 100%;
    background-color: transparent;
    border: none;
    font-size: 14px;
    line-height: 1.4;
    color: var(--colorWhite);

    &::placeholder {
      color: var(--colorWhiteAlpha60);
    }

    &:focus {
      outline: none;
    }
  }
}
