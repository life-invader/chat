.sidebar {
  border-right: 2px solid var(--colorTuna);

  &__header {
    padding: 12px 16px;
    border-bottom: 2px solid var(--colorTuna);
  }

  &__headerTop {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 24px;
  }

  &__headerUserPicWrapper {
    max-width: 40px;
    flex-shrink: 0;
  }

  &__btnList {
    display: flex;
    gap: 16px;
  }

  &__headerSearch {
    margin-bottom: 24px;
  }
}
